<section>
  <div class="row justify-content-center">
    <h2> Find A Tradesperson For Your Job </h2>
  </div>

  <div class="container pmw centre-pane">
    <div>
      <h2>Title</h2>
      <p class="editable border rounded p5" contenteditable="true" id="newJobTitle" data-placeholder="Enter a job title"></p>
    </div>
    <div class="mb-4">
                <label><h3>Job Category</h3></label>
                <select id="job-type" class="custom-select">
                    <option value="">Choose...</option>
                    <option value="2">Electrician</option>
                    <option value="3">Carpenter</option>
                    <option value="4">Glazier</option>
                    <option value="5">Gardener</option>
                    <option value="6">Plumber</option>
                    <option value="7">Builder</option>
                    <option value="8">Plasterer</option>
                    <option value="9">Decorator</option>
                </select>
            </div>
    <div class="mt-5">
      <h3>Description</h3>
      <p class="editable border rounded p5" contenteditable="true" id="newJobDescription" data-placeholder="What job do you need doing?... Write a description here."></p>
    </div>
    <div class="row mt-5">
      <button class="button btn-primary align-center btn" id="postJob">Submit</button>
    </div>

  </div>

</section>

